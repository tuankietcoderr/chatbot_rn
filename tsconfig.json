{
  "extends": "expo/tsconfig.base",
  "moduleResolution": "node",
  "allowSyntheticDefaultImports": true,
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@layout/*": ["./src/layout/*"],
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@types/*": ["./src/types/*"],
      "@config/*": ["./src/config/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@services/*": ["./src/services/*"],
      "@constants/*": ["./src/constants/*"],
      "@store/*": ["./src/store/*"],
      "@features/*": ["./src/store/features/*"],
      "@schema/*": ["./src/schema/*"],
      "@assets/*": ["./assets/*"],
      "@lib/*": ["./src/lib/*"],
      "@context/*": ["./src/context/*"]
    },
    "noImplicitAny": false
  }
}
